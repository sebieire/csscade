# Include only essential files for PyPI distribution
include LICENSE
include README.md
include pyproject.toml
include requirements.txt
include requirements-dev.txt

# Include all Python source files in csscade package
recursive-include csscade *.py

# Exclude everything else
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *~
global-exclude *.swp
global-exclude .DS_Store